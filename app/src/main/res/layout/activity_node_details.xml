<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/nodeIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Node ID: "
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/predecessorIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predecessor ID: "
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/successorIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Successor ID: "
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finger Table"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/fingerTableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

</LinearLayout>
