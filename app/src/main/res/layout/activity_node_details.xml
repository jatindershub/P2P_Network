<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/nodeIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Node ID: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/predecessorIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predecessor ID: "
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/successorIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Successor ID: "
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/fingerTableTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finger Table"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EEEEEE"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/fingerTableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
</LinearLayout>
